#!/usr/bin/env python

"choose build options for and push to Mozilla's try server"

import sys
import re

# A node in the decision tree
class N: # Node
  def __init__ (self, prompt, help, action):
    self.prompt = prompt
    self.help = help
    self.action = action

# this deletes a character, then moves to the next option.
class D: # delete_command
  def __init__(self, next):
    self.next = next

class NoPrompt:
  def __init__ (self, action):
    self.action = action

class ListPrompt:
  def __init__(self, prompt, optList):
    self.promptText = prompt
    self.options = optList

  def listOptions(self, state):
    for i, v in enumerate(self.options):
      state.say(str(i + 1).rjust(2) + ') ' + v.prompt.ljust(20) + ' ' + v.help)

  def prompt(self, state):
    state.say(self.promptText + '?')
    self.listOptions(state)
    input = state.prompt('[1-' + str(len(self.options)) + ']')
    if input == '?':
      state.say('Comma delimit options. Specify ranges with hyphens. e.g. 1,3,5-7')
    else:
      selected_indexes = self.parse_ranges(input)
      if (selected_indexes is None):
        state.say("Invalid option, please try again")
        return
      try:
        return ''.join([self.options[i - 1].action for i in selected_indexes])
      except IndexError:
        state.say("Invalid option, please try again")

  # http://stackoverflow.com/a/4248689
  def parse_ranges(self, astr):
    result = set()
    for part in astr.split(','):
        if (part == ['']):
          return
        x = part.split('-')
        try:
          if (x == [''] or x[0] == '0'):
            return
          result.update(range(int(x[0]), int(x[-1]) + 1))
        except ValueError:
          return
    return sorted(result)

